@model Forms.Models.Form;
@{
    ViewData["Title"] = "Form";
}

<form asp-action="Form" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" />
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" />
    </div>
    <div>
        <label asp-for="PasswordConfirm">Confirm Password</label>
        <input type="password" asp-for="PasswordConfirm" />
    </div>
    <div>
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label asp-for="Age">Age</label>
        <input type="number" asp-for="Age" />
    </div>
    <div>
        <label asp-for="City">City</label>
        <select asp-for="City"
                asp-items="Html.GetEnumSelectList<Form.Cities>()">
        </select>
    </div>
    <div>
        <input type="submit" value="Prześlij" />
        <input type="reset" value="Wyczyść" />
    </div>
</form>
